<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Fragment.ShareFragment">

    <!-- Share Fragment Title -->
    <TextView
        android:id="@+id/shareTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Application"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="#333333"
        android:layout_marginTop="20dp"/>

    <!-- WhatsApp Icon -->
    <ImageView
        android:id="@+id/whatsappIcon"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_below="@id/shareTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:onClick="shareOnWhatsApp"
        android:src="@drawable/whatsapp"
        android:background="?attr/selectableItemBackgroundBorderless" />

    <!-- Twitter Icon -->
    <ImageView
        android:id="@+id/twitterIcon"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_below="@id/whatsappIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="shareOnTwitter"
        android:src="@drawable/twitter"
        android:background="?attr/selectableItemBackgroundBorderless" />

    <!-- Instagram Icon -->
    <ImageView
        android:id="@+id/instagramIcon"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@id/twitterIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="shareOnInstagram"
        android:src="@drawable/instagram"
        android:background="?attr/selectableItemBackgroundBorderless" />

    <!-- Copy Link Button -->
    <Button
        android:id="@+id/copyLinkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/instagramIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Copy Link"
        android:textColor="@android:color/white"
        android:background="#3498db"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:elevation="6dp"
        android:onClick="copyLink" />

</RelativeLayout>
